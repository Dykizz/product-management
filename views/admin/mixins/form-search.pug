mixin form-search(keyword)
    form(id="formSearch") 
        .input-group 
            input(
                type="text" 
                value= keyword
                placeholder = "Nhập từ khóa" 
                name = "keyword" 
                class="form-control"
                autoComplete = "off"
            )
            .input-group-append 
                button(
                    class="btn btn-success" 
                    type="submit"
                ) Tìm