extends ../../layouts/default.pug
include ../../mixins/notification.pug 
include ../../mixins/upload-file-preview.pug
block main
    
    +notification(4000)
    h2.mb-3 Chỉnh sửa thông tin
    form(
        action=`${prefixAdmin}/accounts/edit/${account._id}?_method=PATCH`, 
        method="post"
        enctype="multipart/form-data"
    ) 
        .form-group
            label(for="fullName") Họ và tên
            input(type="text" class="form-control" id="fullName" name="fullName" value=account.fullName required) 
        .form-group 
            label(for="phone") Số điện thoại
            input(
                type="text"
                name="phone"
                id="phone"
                class="form-control"
                value = account.phone
                required
            )
        +upload-file-preview("avatar","avatar")
        .form-group 
            label(for="email") Email 
            input(
                type="email"
                name="email"
                id="email"
                class="form-control"
                value = account.email
                required
            )
        .form-group 
            label(for="password") Mật khẩu
            input(
                type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder ="Nhập mật khẩu mới nếu muốn thay đổi"
            )
        button(type ="submit" class="btn btn-primary") Lưu
    
        