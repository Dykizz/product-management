extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
block main 
    h2 Trang sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +form-search(keyword)
            
    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body 
            .row 
                .col-6
                    +form-change-multi(
                        `${prefixAdmin}/products/change-multi?_method=PATCH`,
                        [
                            {
                                value : 'active',
                                label : 'Hoạt động'
                            },
                            {
                                value : 'inactive',
                                label : 'Dừng hoạt động'
                            }
                        ])
            table(
                    class="table table-hover table-sm "
                    table-check-box
                )
                thead 
                    tr 
                        th 
                            input(type="checkbox", name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề  
                        th Giá  
                        th Trạng thái   
                        th Hành động    

                tbody   
                    each item, index in products
                        tr  
                            td 
                                input(type="checkbox", name="id", value = item._id)
                            td  #{index + 1}
                            td  
                                img(src= item.thumbnail, alt="sản phẩm", srcset="", width="100px" , height="auto")
                            td  #{item.title}
                            td #{item.price}$
                            td 
                                if(item.status === "active")
                                    button(
                                        class="badge badge-success" 
                                        status = item.status 
                                        id = item._id
                                        buttonChangeStatus
                                    ) Hoạt động
                                else 
                                    button(
                                        class="badge badge-danger" 
                                        status = item.status
                                        id = item._id
                                        buttonChangeStatus
                                    ) Dừng hoạt động 
                            td 
                                button(class="btn btn-warning btn-sm") Sửa
                                button(
                                    button-delete-item
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id = item._id
                                ) Xóa 

            +pagination(totalPage,currentPage)         
    form(
        id = "formChangeStatus"
        action="javascript:;"
        method="post"
        data-path = `${prefixAdmin}/products/changeStatus`
    ) 
    form(
        id ="formDeleteItem"
        action="javascript:;"
        method="post"
        data-path = `${prefixAdmin}/products/delete`
    )

    script(src="/admin/js/products.js") 