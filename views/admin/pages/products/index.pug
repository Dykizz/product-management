extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/notification.pug
block main 
    +notification()   
    h2 Trang sản phẩm
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +form-search(keyword)

    .card.mb-3 
        .card-header Sắp xếp 
        .card-body 
            .row 
                .col-6 
                    div(sort)
                        .input-group
                            select(class="form-control" name="sort" sort-select)  
                                option(value="") -- Mặc định -- 
                                option(value="price-asc") Giá tăng dần
                                option(value="price-desc") Giá giảm dần
                                option(value="position-asc") Vị trí tăng dần
                                option(value="position-desc") Vị trí giảm dần 
                                option(value="title-asc") Tiêu đề A-Z
                                option(value="title-desc") Tiêu đề Z-A   
                            .input-group-append  
                                button(
                                    class ="btn btn-danger "
                                    sort-clear
                                )  Clear
    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body 
            .row 
                .col-6
                    +form-change-multi(
                        `${prefixAdmin}/products/change-multi?_method=PATCH`,
                        [   
                            {
                                value : 'active',
                                label : 'Hoạt động'
                            },
                            {
                                value : 'inactive',
                                label : 'Dừng hoạt động'
                            },
                            {
                                value : 'delete-all',
                                label : 'Xóa tất cả'
                            },
                            {
                                value : 'change-position',
                                label : 'Thay đổi vị trí'
                            }
                        ])
                .col-6 
                    a(
                        class="btn btn-outline-success"
                        href =`${prefixAdmin}/products/create`
                    ) + Thêm sản phẩm
            table(
                    class="table table-hover table-sm "
                    table-check-box
                )
                thead 
                    tr 
                        th 
                            input(type="checkbox", name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề  
                        th Vị trí
                        th Giá  
                        th Trạng thái   
                        th Hành động    

                tbody   
                    each item, index in products
                        tr  
                            td 
                                input(type="checkbox", name="id", value = item._id)
                            td  #{index + 1}
                            td  
                                img(src= item.thumbnail, alt="sản phẩm", srcset="", width="100px" , height="auto")
                            td  #{item.title}
                            td 
                                input(
                                    type="number" 
                                    name="position"
                                    style ="width : 70px"
                                    value = item.position
                                    min = 1
                                )
                            td #{item.price}$
                            td 
                                if(item.status === "active")
                                    button(
                                        class="badge badge-success" 
                                        status = item.status 
                                        id = item._id
                                        buttonChangeStatus
                                    ) Hoạt động
                                else 
                                    button(
                                        class="badge badge-danger" 
                                        status = item.status
                                        id = item._id
                                        buttonChangeStatus
                                    ) Dừng hoạt động 
                            td 
                                a(
                                    class="btn btn-secondary btn-sm"
                                    href = `${prefixAdmin}/products/detail/${item._id}`
                                ) Chi tiết
                                a(
                                    class="btn btn-warning btn-sm ml-1"
                                    href =`${prefixAdmin}/products/edit/${item._id}`
                                ) Sửa
                                button(
                                    button-delete-item
                                    class="btn btn-danger btn-sm ml-1"
                                    data-id = item._id
                                ) Xóa 

            +pagination(totalPage,currentPage)         
    form(
        id = "formChangeStatus"
        action="javascript:;"
        method="post"
        data-path = `${prefixAdmin}/products/changeStatus`
    ) 
    form(
        id ="formDeleteItem"
        action="javascript:;"
        method="post"
        data-path = `${prefixAdmin}/products/delete`
    )

    script(src="/admin/js/products.js") 