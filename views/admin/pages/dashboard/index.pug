extends ../../layouts/default.pug
include ../../mixins/notification.pug
block main 
    +notification(4000)
    h2 Trang tổng quan
    div(style = "width : 100% ; height : 200px").mb-4
        .body-animation
            .animation-text I'm a  
                span 
    .row 
        .col-12 
            .card.mb-4 
                .card-header Thông tin tài khoản 
                .card-body 
                    p Tên tài khoản : 
                        strong #{user.fullName}
                    p Email : 
                        strong #{user.email}
                    p Số điện thoại : 
                        strong #{user.phone} 
                    p Quyền hiện tại : 
                        strong #{role.title}
    .row 
        .col-6 
            .card.mb-4 
                .card-header Danh mục sản phẩm 
                .card-body 
                    p Số lượng danh mục : 
                        strong #{infor.category.total}
                    p Đang hoạt động : 
                        strong #{infor.category.active}
                    p Ngừng hoạt động : 
                        strong #{infor.category.inactive}
        .col-6 
            .card.mb-4
                .card-header Danh sách sản phẩm 
                .card-body 
                    p Số lượng sản phẩm : 
                        strong #{infor.product.total}
                    p Đang hoạt động : 
                        strong #{infor.product.active}
                    p Ngừng hoạt động : 
                        strong #{infor.product.inactive}
    .row    
        .col-6 
            .card.mb-4 
                .card-header Tài khoản Admin 
                .card-body 
                    p Số lượng tài khoản : 
                        strong #{infor.accountAdmin.total}
                    p Đang hoạt động : 
                        strong #{infor.accountAdmin.active}
                    p Ngừng hoạt động : 
                        strong #{infor.accountAdmin.inactive}
        .col-6 
            .card.mb-4 
                .card-header Tài khoản Client 
                .card-body 
                    p Số lượng tài khoản : 
                        strong #{infor.accountClient.total}
                    p Đang hoạt động : 
                        strong #{infor.accountClient.active}
                    p Ngừng hoạt động : 
                        strong #{infor.accountClient.inactive} 
