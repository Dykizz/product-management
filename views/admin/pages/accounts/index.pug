extends ../../layouts/default.pug
include ../../mixins/notification.pug
block main 
    +notification(4000)
    h2 Danh sách tài khoản
    .card 
        .card-header.d-flex.align-items-center 
            div Danh sách
        .card-body 
            table(
                class= "table table-hover"
            )
                thead 
                    tr  
                        a(
                            class = "btn btn-outline-success mb-3"
                            href = `${prefixAdmin}/accounts/create`
                        ) Thêm tài khoản
                    tr 
                        th STT  
                        th Họ và tên   
                        th Email
                        th Số điện thoại 
                        th Trạng thái
                        th Hành động
                tbody 
                    if accounts  
                        each item,index in accounts 
                            tr 
                                td #{index + 1}
                                td #{item.fullName} 
                                td #{item.email}
                                td #{item.phone}
                                if item.status == "active"
                                    td 
                                        button(
                                            class="badge badge-success" 
                                            status = item.status
                                            id = item._id
                                            buttonChangeStatus
                                        ) Hoạt động
                                else 
                                    td 
                                        button(
                                            class="badge badge-danger" 
                                            status = item.status
                                            id = item._id
                                            buttonChangeStatus
                                        ) Dừng hoạt động  
                                td 
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href = `${prefixAdmin}/accounts/detail/${item._id}`
                                    ) Chi tiết
                                    a(
                                        class="btn btn-warning btn-sm ml-1"
                                        href =`${prefixAdmin}/accounts/edit/${item._id}`
                                    ) Sửa
                                    button(
                                        button-delete-item
                                        class="btn btn-danger btn-sm ml-1"
                                        data-id = item._id
                                    ) Xóa 
                    else 
                        tr 
                            td(colspan="6") Không có dữ liệu!
    form(
            id ="formDeleteItem"
            action="javascript:;"
            method="post"
            data-path = `${prefixAdmin}/accounts/delete`
        )
    form(
        formChangeStatus
        action="javascript:;"
        method="post"
        data-path = `${prefixAdmin}/accounts/changeStatus`
    ) 
    script(src="/admin/js/accounts.js") 