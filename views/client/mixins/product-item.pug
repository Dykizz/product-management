mixin product-item(item)
    .product-item 
        .inner-image 
            img(src=item.thumbnail , alt=item.title)
        .inner-content 
            a(
                href=`/products/${item.slug}`) 
                h4.inner-title #{item.title}
            .inner-price-new #{(item.price * (100 - item.discountPercentage) / 100).toFixed(2)}$
            .inner-price-old #{item.price}$
            .inner-discount
                strong  #{-item.discountPercentage}%
            if (item.featured)
                .inner-featured 
                    strong Nổi bật